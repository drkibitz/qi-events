{
    "tags": {
        "allowUnknownTags" : true
    },
    "source": {
        "include": [
            "./src/",
            "./package.json",
            "./README.md"
        ],
        "exclude": [],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins"   : ["plugins/markdown"],
    "templates" : {
        "cleverLinks"     : true,
        "monospaceLinks"  : true,
        "default" : {
            "outputSourceFiles" : false
        },
        "systemName"      : "Qi Events",
        "footer"          : "",
        "copyright"       : "Copyright Â© 2013-2015 Dr. Kibitz",
        "navType"         : "vertical",
        "theme"           : "spacelab",
        "linenums"        : false,
        "collapseSymbols" : false,
        "inverseNav"      : false
    },
    "markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    },
    "opts": {
        "encoding"    : "utf8",
        "recurse"     : true,
        "private"     : false,
        "lenient"     : true,
        "destination" : "./docs",
        "template"    : "./node_modules/ink-docstrap/template"
    }
}
